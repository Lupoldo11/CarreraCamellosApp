            <children>
                <VBox alignment="CENTER" prefHeight="467.0" prefWidth="1650.0" spacing="50.0">
                    <children>
                        <Pane prefHeight="70.0" prefWidth="927.0" style="-fx-background-color: #8bff7a;" />
                        <Pane prefHeight="70.0" prefWidth="927.0" style="-fx-background-color: #ff5a99;" />
                        <Pane prefHeight="70.0" prefWidth="927.0" style="-fx-background-color: #67fff8;" />
                    </children>
                </VBox>
                <Line endX="100.0" scaleX="2.5" startX="99.96724700927734" startY="465.63250732421875" />
