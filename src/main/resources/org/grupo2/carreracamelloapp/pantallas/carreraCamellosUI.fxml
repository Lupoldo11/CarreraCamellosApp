                <Text id="winnerLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="Suerte!!!" textAlignment="CENTER">
                    <font>
                        <Font name="Arial Italic" size="26.0" />
                    </font>
                </Text>
            </children>
        </HBox>
        <Button fx:id="iniciarCarreraButton" disable="true" onAction="#onIniciarCarreraClick" prefWidth="158.0" text="Iniciar carrera">
